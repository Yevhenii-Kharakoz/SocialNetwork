<div class="container-auth">
  <div class="auth-card">
    <h2 class="auth-header">Відновлення паролю</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Електронна адреса", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-auth" %>
      </div>

      <div class="actions">
        <%= f.submit "Надіслати інструкції", class: "auth-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
