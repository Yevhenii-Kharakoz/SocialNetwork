
<div class="container-auth">
  <div class="auth-card">
    <h2 class="auth-header"><%= I18n.t('links.login') %></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, I18n.t('registration.email'), class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-auth" %>
      </div>

      <div class="form-group">
        <%= f.label :password, I18n.t('registration.password'), class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control-auth" %>
      </div>

      <div class="actions">
        <%= f.submit I18n.t('links.login'), class: "auth-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "auth-links" %>
  </div>
</div>
