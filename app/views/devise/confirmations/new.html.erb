<div class="confirmation-wrapper">
  <div class="confirmation-card">
    <h2 class="confirmation-title">Повторно надіслати інструкції з підтвердження</h2>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "confirmation-form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-field">
        <%= f.label :email, "Електронна адреса", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "confirmation-input"%>
      </div>

      <div class="form-actions">
        <%= f.submit "Надіслати", class: "confirmation-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "auth-links" %>
  </div>
</div>
