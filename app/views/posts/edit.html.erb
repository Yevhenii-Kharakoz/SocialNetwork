<%= form_with(model: @post, local: true, data: { turbo: false }) do |form| %>
  <% if @post.new_record? %>
    <h1>Create New Post</h1>
  <% else %>
    <h1>Edit Post</h1>
  <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :post_title, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, id: :post_body, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-success' %>
    </div>

  <div>
    <%= form.label :image, "Upload Image" %>
    <%= form.file_field :image %>
  </div>

  <% if @post.image.attached? %>
    <div>
      <%= image_tag @post.image %>
      <%= form.check_box :remove_image %>
      <%= form.label :remove_image, "Remove Image" %>
    </div>
  <% end %>

  <% end %>

  <%= link_to 'Back to posts', posts_path, class: "btn btn-link" %>
